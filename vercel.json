{
  "version": 2,
  "builds": [
    {
      "src": "ArtSpot/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12",
        "installCommand": "apt-get update && apt-get install -y libmariadb-dev"
      }
    },
    {
      "src": "/static/",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/staticfiles/$1" },
    {
      "src": "/(.*)",
      "dest": "ArtSpot/wsgi.py"
    }
  ]
}
